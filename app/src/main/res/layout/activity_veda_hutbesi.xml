<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:maxads="http://schemas.applovin.com/android/1.0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kutuphane.VedaHutbesiActivity">


    <TextView
        android:id="@+id/vedaHutbesiText"
        android:layout_width="match_parent"
        android:layout_height="515dp"
        android:layout_margin="10dp"
        android:background="@drawable/layer_stroke_4_corner"
        android:gravity="center"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.applovin.mediation.ads.MaxAdView
        android:id="@+id/maxAdView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vedaHutbesiText"
        app:layout_constraintVertical_bias="0.976"
        maxads:adUnitId="b06d01f284423f8f"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>