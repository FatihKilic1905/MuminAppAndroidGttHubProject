<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ZikirMatik.MyZikirDetailActivity">


    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="196dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/layer_stroke_4_corner"
        android:gravity="center"
        android:padding="10dp"
        android:text="Zikir Adı"
        android:textColor="@color/muminAppGreen"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="42dp"></TextView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginEnd="3dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/layer_stroke_4_corner"
        android:gravity="center"
        android:padding="10dp"
        android:text="Zikir Niyeti"
        android:textColor="@color/muminAppGreen"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="42dp"></TextView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="180dp"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:layout_marginEnd="3dp"
        android:background="@drawable/layer_stroke_4_corner"
        android:gravity="center"
        android:padding="10dp"
        android:text="Zikir Duası"
        android:textColor="@color/muminAppGreen"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_goneMarginEnd="10dp"
        tools:layout_editor_absoluteY="93dp"></TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="180dp"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:layout_marginStart="3dp"
        android:background="@drawable/layer_stroke_4_corner"
        android:gravity="center"
        android:padding="10dp"
        android:text="Zikir Duası"
        android:textColor="@color/muminAppGreen"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="93dp"></TextView>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"

        android:background="@drawable/custom_button_zikir_yesil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.0"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1"></ImageButton>


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="421dp"></ImageButton>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_stroke_4_corner"
        android:padding="5dp"
        android:text="Zikir Sayısı"
        android:textColor="@color/muminAppGreen"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="438dp"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>