<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:maxads="http://schemas.applovin.com/android/1.0"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">



    <ImageButton
        android:id="@+id/kuranıKerimButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/corner_4_radius"
        android:src="@mipmap/ic_kuran_buttonnn"

        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <ImageButton
        android:id="@+id/hatimDuasiButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"

        android:background="@drawable/corner_4_radius"
        android:src="@mipmap/ic_hatim_duasi_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/kuranıKerimButton" />

    <ImageButton
        android:id="@+id/vedaHutbesiButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"

        android:background="@drawable/corner_4_radius"
        android:src="@mipmap/ic_veda_hutbesi_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hatimDuasiButton" />

    <ImageButton
        android:id="@+id/tesbihatButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/corner_4_radius"

        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_tesbihat_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ezanDuasiButton"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@drawable/corner_4_radius"
        android:src="@mipmap/ic_ezan_duasi_button"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/tesbihatButton" />


    <com.applovin.mediation.ads.MaxAdView
        android:id="@+id/adViewAppLovin1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        maxads:adUnitId="b06d01f284423f8f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974"

        tools:layout_editor_absoluteX="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

</androidx.constraintlayout.widget.ConstraintLayout>