<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZikirMatik.ZikirUserDetailEditActivity">

    <Button
        android:id="@+id/geriDonButton"
        android:layout_width="380dp"
        android:layout_height="43dp"
        android:layout_marginBottom="16dp"
        android:text="Geri Dön"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/davetGonderbutton"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:text="Tekrar Davet Gönder"
        app:layout_constraintBottom_toTopOf="@+id/geriDonButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/zikirdeCikarButton"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:text="Zikirden Çıkar"
        app:layout_constraintBottom_toTopOf="@+id/davetGonderbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/zikirCountEditButton"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:text="Zikir Sayısı Düzenle"
        app:layout_constraintBottom_toTopOf="@+id/geriDonButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/kullaniciDuenleTextView"
        android:layout_width="253dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="Kullanıcı Düzenle"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="60dp"

        android:gravity="center"
        android:text="userName"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/countTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciDuenleTextView"
      />

    <TextView
        android:id="@+id/countTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="count/count"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>