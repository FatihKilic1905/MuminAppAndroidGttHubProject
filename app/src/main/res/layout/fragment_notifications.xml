<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment"
    tools:layout_editor_absoluteX="13dp"
    tools:layout_editor_absoluteY="0dp">

    <Button
        android:id="@+id/ayarlarButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="56dp"
        android:onClick="gecisyap"

        android:text="Ayarlar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canliButton"
        app:layout_constraintVertical_bias="0.496"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/ZekatmatikButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="60dp"
        android:text="Zekatmatik"
        app:layout_constraintEnd_toStartOf="@+id/canliButton"
        tools:layout_editor_absoluteY="232dp" />

    <Button
        android:id="@+id/canliButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="48dp"
        android:text="Kabe Canlı"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="232dp" />

    <Button
        android:id="@+id/zikirMatikButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="48dp"
        android:text="Online Zikirmatik"
        app:layout_constraintBottom_toTopOf="@+id/canliButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hatimTakipButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Hatim Takip"
        app:layout_constraintBottom_toTopOf="@+id/ZekatmatikButton"
        app:layout_constraintEnd_toStartOf="@+id/zikirMatikButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/usersButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="52dp"
        android:text="Kullanıcı"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ayarlarButton"
        app:layout_constraintTop_toBottomOf="@+id/ZekatmatikButton"
        app:layout_constraintVertical_bias="0.496" />


</androidx.constraintlayout.widget.ConstraintLayout>