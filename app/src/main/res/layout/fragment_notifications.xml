<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <Button
        android:id="@+id/ayarlarButton"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:onClick="gecisyap"
        android:text="Ayarlar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canliButton"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/ZekatmatikButton"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:text="Zekatmatik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/canliButton"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:text="Kabe CanlÄ±"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ZekatmatikButton" />


</androidx.constraintlayout.widget.ConstraintLayout>