<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    android:background="@drawable/layer_stroke_4_corner"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/myCountTextview"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Count"
        android:textAlignment="textStart"
        android:textColor="@color/muminAppGreen"
        android:textSize="18dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameTextView"></TextView>

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textAlignment="textStart"
        android:textColor="@color/muminAppGreen"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ProgressBar
        android:id="@+id/usersCountProgresBar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:indeterminateOnly="false"
        android:progress="10"
        android:progressDrawable="@drawable/circleprogresbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="16dp"></ProgressBar>

    <TextView
        android:id="@+id/zikirUserProgresBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:textColor="@color/muminAppGreen"
        app:layout_constraintBottom_toBottomOf="@+id/usersCountProgresBar"
        app:layout_constraintEnd_toEndOf="@+id/usersCountProgresBar"
        app:layout_constraintStart_toStartOf="@+id/usersCountProgresBar"
        app:layout_constraintTop_toTopOf="@+id/usersCountProgresBar">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>